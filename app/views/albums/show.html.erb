<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @album.name %>
</p>


<p>
  <b>Description:</b>
  <%= @album.description %>
</p>
<p>
	<b>Photos</b>
	<% @album.photos.each do |photo| %>
	  <%= link_to image_tag(photo.image.url(:thumb), :border =>0),:controller =>'photos', :action => 'show', :id => photo %>
	<% end %>
</p>


<%= link_to 'Edit', edit_album_path(@album) %> |
