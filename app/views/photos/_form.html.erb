<%= form_for @photo, :html => { :multipart => true } do |f| %>
  <% if @photo.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@photo.errors.count, "error") %> prohibited this photo from being saved:</h2>

      <ul>
      <% @photo.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<% if false %>
<div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :taken %><br />
    <%= f.date_select :taken %>
  </div>
  <div class="field">
    <%= f.label :xpro %><br />
    <%= f.check_box :xpro %>
  </div>
  <div class="field">
    <%= f.label :camera %><br />
    <%= f.collection_select( :camera_id, @cameras, :id, :fullName, :prompt => 'Please select camera') %>
  </div>
  <div class="field">
    <%= f.label :film %><br />
    <%= f.collection_select( :film_id, @films, :id, :fullName, :prompt => 'Please select film') %>
  </div>
<div>
	<%= f.label :tags %><br />
<% for tag in Tag.find(:all) %>

  <%= check_box_tag "photo[tag_ids][]", tag.id, @photo.tags.include?(tag) %>
  <%= tag.name %>
<% end %>

<div>
	<%= f.label :albums %><br />
<% for album in Album.find(:all) %>

  <%= check_box_tag "photo[album_ids][]", album.id, @photo.albums.include?(album) %>
  <%= album.name %>
<% end %>
</div>
<% end %>

<%= f.file_field :image %>


<div class="actions">
  <%= f.submit %>
</div>
<script type="text/javascript">
<%- session_key = Rails.application.config.session_options[:key] -%>
jQuery(function () {
    
  var uploadify_script_data = {};
  
  // Fetch the CSRF meta tag data
  var csrf_token = jQuery('meta[name=csrf-token]').attr('content');
  var csrf_param = jQuery('meta[name=csrf-param]').attr('content');
  
  // Now associate the data in the config, encoding the data safely
  uploadify_script_data[csrf_param] = encodeURI(encodeURI(csrf_token));
  
  // Associate the session information
  uploadify_script_data['<%= session_key %>'] = '<%= cookies[session_key] %>';
  
  jQuery('#photo_image').uploadify({
    script : '/photos',
	uploader  : '/javascripts/jquery.uploadify/uploadify.swf',
	multi: true,
	fileDataName: 'image',
	cancelImg: '/images/cancel.png',
    scriptData : uploadify_script_data
  }); 
jQuery('#photo_submit').click(function(event){
event.preventDefault();
jQuery('#photo_image').uploadifyUpload();
});  
});
</script>
<% end %>
