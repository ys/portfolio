    <%= f.label :model %><br />
    <%= f.text_field :model %>
  </div>
  <div class="field">
    <%= f.label :brand %><br />
    <%= f.text_field :brand %>
  </div>
  <div class="field">
    <%= f.label :nickname %><br />
    <%= f.text_field :nickname %>
  </div>
<div class="formThumbs">
	<%= f.label :photos %><br />
<% for photo in Photo.find(:all) %>

  <%= check_box_tag "camera[photo_ids][]", photo.id, @camera.photos.include?(photo) %>
  <%= image_tag(photo.image.url(:square), :border =>0, :class => 'thumb', :onclick=>"checkImage($(this));") %>
<% end %>
</div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
