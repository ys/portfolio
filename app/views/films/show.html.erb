<p id="notice"><%= notice %></p>
<div class="category desc grid_4 alpha">
	<p>
 	  <b>Type:</b>
	  <%= @film.type %>
	  <b>Format:</b>
	  <%= @film.format %>
	  <b>Brand:</b>
	  <%= @film.brand %>
	  <b>Name:</b>
	  <%= @film.name %>
	  <b>Description:</b>
	  <%= @film.description %>
	</p>
</div>
	<%-i=1-%>
	<%edit = false%>
	<% @film.photos.each do |photo| %>
	<div class="category grid_4 <%- if i==0 -%>alpha<%-end-%> <%- if i==5 -%>omega<%-end-%>">
		<%- if user_signed_in? && !edit -%>
		<div class="triangle right"></div>
		<span class="rightAlign"><%= link_to 'p', edit_film_path(@film), :class=>"icon"%> <%= link_to 't', @film, :confirm => 'Delete this?', :method => :delete , :class=>"icon"%></span>
		<%edit = true%>
		<%-end-%>
	  <%= link_to image_tag(photo.image.url(:square), :border =>0, :class => 'thumb'),:controller =>'photos', :action => 'show', :id => photo %>
	</div>
	<%-i = i+1 -%>
	<%- if i==6 -%>
	<%-i=0 end-%>
	<% end %>

<%= link_to image_tag('bak.png'), films_path, :class =>'add'%>
